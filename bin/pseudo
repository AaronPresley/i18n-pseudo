#!/usr/bin/env node

const { Command } = require('commander');
const pseudo = require('../dist').default;

const program = new Command();
program
  .option('-ne, --noExpand', 'Whether to expand the text', false)
  .parse(process.argv);

const args = program.args;
const opts = program.opts();
  
if (!args.length) {
  console.error(`\x1b[31m`, `ðŸš¨ Must pass a value to pseudotranslate`);
  process.exit(1);
}

process.stdout.write(pseudo(args.join(' '), {
  expandText: !opts.noExpand
}) + '\n');
